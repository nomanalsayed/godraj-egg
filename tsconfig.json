{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": [
      "vue",
      "@nuxt/types",
      "@nuxtjs/tailwindcss",
      "node"
    ],
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#utils/auth": ["./server/utils/auth.ts"],
      "#utils/db": ["./server/utils/db.ts"],
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "types/index.d.ts"
  ]
}
